{
	"name": "vitaltrack-backend",
	"version": "0.1.0",
	"description": "API backend for VitalTrack (Express + SQLite/MySQL)",
	"main": "src/server.js",
	"type": "module",
	"scripts": {
		"start": "node src/server.js",
		"dev": "nodemon --watch src --ext js --exec node src/server.js",
		"test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
		"test:watch": "npm run test -- --watch",
		"db:setup": "node scripts/setup-db.js",
		"db:reset": "rm -f database.sqlite && npm run db:setup"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.21.1",
		"js-yaml": "^4.1.0",
		"mysql2": "^3.11.3",
		"swagger-ui-express": "^5.0.1",
		"sqlite3": "^5.1.6"
	},
	"devDependencies": {
		"nodemon": "^3.1.7",
		"jest": "^29.7.0",
		"supertest": "^6.3.3"
	},
	"engines": {
		"node": ">=18"
	},
	"jest": {
		"testEnvironment": "node",
		"testMatch": ["**/__tests__/**/*.js", "**/?(*.)+(spec|test).js"],
		"collectCoverageFrom": [
			"src/**/*.js",
			"!src/server.js"
		]
	}
}

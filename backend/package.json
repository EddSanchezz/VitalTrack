{
	"name": "vitaltrack-backend",
	"version": "0.1.0",
	"description": "API backend for VitalTrack (Express + SQLite only)",
	"main": "src/server.js",
	"type": "module",
	"scripts": {
		"start": "node scripts/setup-db.js && node src/server.js",
		"dev": "npm run db:setup && nodemon --watch src --ext js --exec node src/server.js",
		"test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
		"test:watch": "npm run test -- --watch",
		"db:setup": "node scripts/setup-db.js",
		"db:reset": "node -e \"try{require('fs').unlinkSync('database.sqlite')}catch(e){}\" && npm run db:setup"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.21.1",
		"js-yaml": "^4.1.0",
		"pdfkit": "^0.17.2",
		"sqlite3": "^5.1.6",
		"swagger-ui-express": "^5.0.1"
	},
	"devDependencies": {
		"jest": "^29.7.0",
		"nodemon": "^3.1.7",
		"supertest": "^6.3.3"
	},
	"engines": {
		"node": ">=18"
	},
	"jest": {
		"testEnvironment": "node",
		"testMatch": [
			"**/__tests__/**/*.js",
			"**/?(*.)+(spec|test).js"
		],
		"collectCoverageFrom": [
			"src/**/*.js",
			"!src/server.js"
		]
	}
}
